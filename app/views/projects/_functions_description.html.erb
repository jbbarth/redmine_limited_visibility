<div class="modal" id="functions_description">
  <h3 class="title"><%= l(:label_functions_activated_description) %></h3>
  <% if functions.any? %>
    <dl>
      <% functions.each do |function| %>
        <dt><%= function.name %></dt>
        <dd><%= function.description %></dd>
      <% end %>
    </dl>
  <% else %>
    <p class="nodata"><%= l(:label_no_data) %></p>
  <% end %>
</div>
